{
  "rulesDirectory": [
    "./rules",
    "./rules/button",
    "./rules/card",
    "./rules/tabs",
    "./rules/tile"
  ],
  "rules": {
    "dt-breadcrumbs-alt-text": { "severity": "warning" },
    "dt-button-no-empty": true,
    "dt-card-direct-children": true,
    "dt-card-needs-title": true,
    "dt-card-no-empty": true,
    "dt-checkbox-no-empty": true,
    "dt-consumption-icon-alt-text": true,
    "dt-context-dialog-alt-text": { "severity": "warning" },
    "dt-copy-to-clipboard-no-empty": true,
    "dt-empty-state-requires-item": true,
    "dt-expandable-trigger-is-button": { "severity": "warning" },
    "dt-icon-button-alt-text": true,
    "dt-icon-button-needs-icon": true,
    "dt-info-group-requires-icon": true,
    "dt-info-group-requires-title": true,
    "dt-inline-editor-alt-text": { "severity": "warning" },
    "dt-input-requires-label": { "severity": "warning" },
    "dt-loading-distractor-no-empty": true,
    "dt-menu-alt-text": true,
    "dt-menu-disabled-buttons-not-allowed": true,
    "dt-nested-button-is-icon-button": true,
    "dt-radio-button-no-empty": true,
    "dt-radio-button-requires-name": { "severity": "warning" },
    "dt-select-requires-label": { "severity": "warning" },
    "dt-selection-area-alt-text": true,
    "dt-show-more-no-empty": true,
    "dt-switch-no-empty": true,
    "dt-tab-content-no-empty": true,
    "dt-tab-group-requires-tabs": { "severity": "warning" },
    "dt-tab-label-no-empty": true,
    "dt-tab-requires-content": { "severity": "warning" },
    "dt-tab-requires-label": { "severity": "warning" },
    "dt-tag-no-empty": true,
    "dt-tile-direct-children": true,
    "dt-tile-icon-needs-icon": { "severity": "warning" },
    "dt-tile-needs-icon": true,
    "dt-tile-needs-title": true,
    "dt-tile-no-empty": { "severity": "warning" },
    "dt-toggle-button-group-item-is-button": true
  }
}
